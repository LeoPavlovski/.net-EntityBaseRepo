@*This is the model section*@
@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of actors";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m=>m.ImageURL)</th>
                    <th>@Html.DisplayNameFor(m=>m.Name)</th>
                    <th>@Html.DisplayNameFor(m=>m.Description)</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@Html.DisplayFor(Modelitem=>item.ImageURL)" class="rounded-circle" style="max-width:150px;">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(ModalItem=>item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(ModalItem=>item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-success"><i class="bi bi-pencil-sqare"></i>Edit</a>
                            <a class="btn btn-outline-primary"><i class="bi bi-eye"></i>i>Details</a>
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @*This is the section for the button to create a new Movie*@

     <a asp-controller="Movies" asp-action="Create" class="btn btn-outline-success"><i class="bi bi-person-circle"></i>Create a new Movie</a>
    </div>
</div>



