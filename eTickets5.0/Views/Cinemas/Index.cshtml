@*This is the model section*@
@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m=>m.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(m=>m.Name)</th>
                    <th>@Html.DisplayNameFor(m=>m.Biography)</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@Html.DisplayFor(Modelitem=>item.ProfilePictureURL)" class= "rounded-circle" style="max-width:150px;">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(ModalItem=>item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(ModalItem=>item.Biography)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-success" asp-controller="Cinemas" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-sqare"></i>Edit</a>
                            <a class="btn btn-outline-primary" asp-controler="Cinemas" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>i>Details</a>
                            <a class="btn btn-outline-danger" asp-controller="Cinemas" asp-action="Delete" asp-route-id=@item.Id><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-outline-success" asp-controller="Cinemas" asp-action="Create"><i class="bi bi-person-circle"></i>Add an Cinema</a>
    </div>
</div>



