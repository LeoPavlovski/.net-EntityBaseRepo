@model Actor;

@{
    ViewData["Title"] = "The Actors";
}

@*Display the HTML*@

@*we are going to have 3 input fields for the profileURL, Fullname, Biography *@
@*And because we are goign to have a create options (submit something to the database we need to create a form*@
<div class="row">
    <div class="col-md-6 offset-2">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group">
              <label asp-for="ProfilePictureURL">Profile Picture</label>
                <input asp-for="ProfilePictureURL">
                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="Biography">Biography </label>
                <input asp-for="Biography">
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>
            <div classs="input-group">
                <input type="submit" value="Create" class="btn btn-outline-success"/>
                <a class="btn btn-outline-secondary" asp-controller="Actors" asp-action="index">Get Back</a>
            </div>
        </form>
    </div>
</div>