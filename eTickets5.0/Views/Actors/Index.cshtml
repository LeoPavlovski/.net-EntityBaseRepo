@*This is the model section*@
@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of actors";
}

<div class="row">
    <div class="col-md-8 offset-2">
       <table class="table">
           <thead>
               <tr>
                   <th>@Html.DisplayNameFor(m=>m.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(m=>m.Name)</th>
                    <th>@Html.DisplayNameFor(m=>m.Biography)</th>
                   <th>Actions</th>

               </tr>
           </thead>
           <tbody>
               @foreach (var item in Model)
                {
                   <tr>
                       <td class="align-middle">
                            <img src="@Html.DisplayFor(Modelitem=>item.ProfilePictureURL)" class=" rounded-circle" style="max-width:150px;" >
                       </td>
                       <td class="align-middle">
                           @Html.DisplayFor(ModalItem=>item.Name)
                       </td>
                       <td class="align-middle">
                           @Html.DisplayFor(ModalItem=>item.Biography)
                       </td>
                       <td class="align-middle">
                           <a class="btn btn-outline-success" asp-controller="Actors" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-sqare"></i>Edit</a>
                            <a class="btn btn-outline-primary" asp-controller="Actors" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye">
                                </i>Details </a>
                            <a class="btn btn-outline-danger" asp-controller="Actors" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                       </td>
                   </tr>
                }
           </tbody>
       </table>
       <a asp-controller="Actors" asp-action="Create" class="btn btn-outline-success"><i class="bi bi-film"></i>Create a new Actor</a>
    </div>
</div>



